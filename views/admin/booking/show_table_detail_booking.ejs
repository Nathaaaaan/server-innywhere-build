<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-warning">Kembali</a>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="https://administrator-innywhere.herokuapp.com/<%= booking.payments.proofPayment %>"
          alt="image"
          style="width: 100%; display: block"
        />

        <div class="row ml-1">
          <% if(booking.payments.status === 'In progress') { %>
          <form
            action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT"
            method="POST"
          >
            <button type="submit" href="" class="btn btn-success btn-sm">
              <i class="fas fa-check"></i>
              Terima
            </button>
          </form>
          <form
            action="/admin/booking/<%= booking.id %>/reject?_method=PUT"
            method="POST"
            class="ml-2"
          >
            <button type="submit" href="" class="btn btn-danger btn-sm">
              <i class="fas fa-times"></i>
              Tolak
            </button>
          </form>
         <% } %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Nama</th>
                <th>Jumlah Transfer</th>
                <th>Bank</th>
                <th>Nama Homestay</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %> <%=
                  booking.memberId.lastName %>
                </td>
                <td>Rp. <%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
